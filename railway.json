{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "installCommand": "npm ci --prefix synqra-mvp",
    "buildCommand": "npm --prefix synqra-mvp run build"
  },
  "deploy": {
    "startCommand": "npm --prefix synqra-mvp run start",
    "healthcheckPath": "/",
    "restartPolicyType": "ALWAYS",
    "rollbackOnFailure": true,
    "logRetentionDays": 7
  }
}

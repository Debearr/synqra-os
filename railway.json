{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "cd apps/synqra-mvp && pnpm install --frozen-lockfile && pnpm run build"
  },
  "deploy": {
    "startCommand": "cd apps/synqra-mvp && pnpm start",
    "healthcheckPath": "/api/health",
    "restartPolicyType": "ON_FAILURE"
  }
}

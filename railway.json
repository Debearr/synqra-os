{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "npm --prefix synqra-mvp install && npm --prefix synqra-mvp run build",
    "rootDirectory": "synqra-mvp"
  },
  "deploy": {
    "startCommand": "npm --prefix synqra-mvp run start",
    "healthcheckPath": "/",
    "restartPolicyType": "ALWAYS",
    "rollbackOnFailure": true,
    "logRetentionDays": 7
  }
}

{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "installCommand": "cd noid-dashboard && npm install next --no-save && npm install",
    "buildCommand": "cd noid-dashboard && npm run build"
  },
  "deploy": {
    "startCommand": "cd noid-dashboard && npm start",
    "healthcheckPath": "/",
    "restartPolicyType": "ALWAYS"
  }
}

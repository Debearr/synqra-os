# ============================================================
# PROJECT IDENTITY
# ============================================================
PROJECT_NAME=synqra
PROJECT_ID=proj_M5uK85kGHzXncUc8OJ7UVBTj
OPENAI_PROJECT_ID=proj_M5uK85kGHzXncUc8OJ7UVBTj

# ============================================================
# DATA CONTROLS (Synqra Configuration)
# ============================================================
# ‚úÖ Free evals ENABLED for Synqra
# ‚úÖ Prompts/outputs kept internal
# ‚ùå No global sharing
OPENAI_ALLOW_FREE_EVALS=true
OPENAI_DATA_SHARING=false
OPENAI_TRAINING_OPT_OUT=true

# ============================================================
# AI SERVICES (Project-Specific Keys)
# ============================================================

# OpenAI (for GPT models - use Synqra project key)
OPENAI_API_KEY=sk-proj-synqra-your_key_here

# Anthropic Claude (shared infrastructure)
ANTHROPIC_API_KEY=sk-ant-api03-your_anthropic_key_here
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022

# DeepSeek (cost-optimized routing)
DEEPSEEK_API_KEY=your_deepseek_key_here

# HuggingFace (local models - 80% of traffic)
HUGGINGFACE_API_TOKEN=hf_your_token_here
HUGGINGFACE_CACHE_DIR=/app/.cache/huggingface

# ============================================================
# AI ROUTING CONFIGURATION
# ============================================================
# 80% Local (HuggingFace stack)
# 20% External (DeepSeek, Claude, GPT-5)
AI_ROUTING_MODE=hybrid
AI_LOCAL_PERCENTAGE=80
AI_EXTERNAL_PERCENTAGE=20

# Local Model Endpoints
LOCAL_MODEL_URL=http://localhost:8000
LOCAL_EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
LOCAL_CLIP_MODEL=openai/clip-vit-base-patch32

# ============================================================
# COST TRACKING & BUDGETS
# ============================================================
ENABLE_COST_TRACKING=true
COST_TRACKING_DB=supabase

# Budget Limits (Synqra Allocation)
MONTHLY_BUDGET_LIMIT=300
DAILY_BUDGET_LIMIT=10
HOURLY_BUDGET_LIMIT=1.0
PER_REQUEST_MAX_COST=0.05

# Alert Thresholds
BUDGET_ALERT_THRESHOLD=0.80
BUDGET_LOCK_THRESHOLD=0.95

# ============================================================
# SAFETY & GUARDRAILS
# ============================================================
ENABLE_BRAND_CHECK=true
ENABLE_TOXICITY_FILTER=true
ENABLE_SAFETY_GUARDRAILS=true

# Brand Consistency (OpenCLIP)
BRAND_SIMILARITY_THRESHOLD=0.85
BRAND_REFERENCE_IMAGES_PATH=/app/brand/synqra

# Toxicity Filter
TOXICITY_THRESHOLD=0.7
TOXICITY_MODEL=unitary/toxic-bert

# ============================================================
# DATABASE (Supabase)
# ============================================================
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_KEY=your_supabase_service_role_key_here

NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# ============================================================
# AGENT CONFIGURATION
# ============================================================
AGENT_MODE=live
AGENT_MAX_TOKENS=1024
AGENT_TEMPERATURE=0.7

# RAG Configuration
RAG_ENABLED=true
RAG_MAX_DOCUMENTS=5
RAG_MIN_SIMILARITY=0.7

# Conversation Memory
CONVERSATION_HISTORY_LIMIT=20
ENABLE_MEMORY_COMPRESSION=true

# ============================================================
# COMMUNICATION & ALERTS
# ============================================================

# Telegram Notifications
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHANNEL_ID=your_telegram_channel_id_here
ENABLE_TELEGRAM_ALERTS=true

# Email (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=synqra@noidlux.com
SMTP_PASS=your_smtp_password_here
FROM_EMAIL=noreply@synqra.com

# ============================================================
# DEPLOYMENT & INFRASTRUCTURE
# ============================================================

# Railway
RAILWAY_PROJECT_ID=your_railway_project_id_here
RAILWAY_SERVICE_ID=your_railway_service_id_synqra
RAILWAY_ENVIRONMENT=production

# Port Configuration
PORT=3004

# Health Checks
HEALTH_CHECK_INTERVAL=300000
ENABLE_AUTO_RECOVERY=true
ENABLE_HEALTH_MONITORING=true

# ============================================================
# DEVELOPMENT
# ============================================================
NODE_ENV=development
DEBUG=false
DEBUG_AI_ROUTING=false

NEXT_PUBLIC_APP_URL=http://localhost:3004
NEXT_PUBLIC_API_URL=http://localhost:3004/api
NEXT_TELEMETRY_DISABLED=1


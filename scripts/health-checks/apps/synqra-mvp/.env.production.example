# ------------------------------------------------------------
# REQUIRED - App will start but features won't work without these
# ------------------------------------------------------------

# Supabase Database (Public/Anon Key - safe for client-side)
NEXT_PUBLIC_SUPABASE_URL=https://tjfeindwmpuyajvjftke.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Supabase Database (Server-side - DO NOT expose publicly)
SUPABASE_URL=https://tjfeindwmpuyajvjftke.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_KEY=your_supabase_service_role_key_here

# AI Provider - Anthropic Claude
ANTHROPIC_API_KEY=sk-ant-api03-your_key_here
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022

# ------------------------------------------------------------
# OPTIONAL - Features will degrade gracefully if missing
# ------------------------------------------------------------

# Telegram Alerts (for monitoring)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHANNEL_ID=your_telegram_channel_id

# Email (SMTP for waitlist confirmations)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
FROM_EMAIL=noreply@synqra.app

# Stripe (for future billing)
STRIPE_SECRET_KEY=sk_live_your_stripe_key
STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# n8n Webhooks (for automation)
N8N_WEBHOOK_URL=https://your-n8n.com/webhook
N8N_API_KEY=your_n8n_api_key

# ------------------------------------------------------------
# SYSTEM CONFIGURATION
# ------------------------------------------------------------

# Environment
NODE_ENV=production

# Port (Railway sets this automatically)
PORT=3000

# Agent Configuration
AGENT_MODE=live
AGENT_MAX_TOKENS=1024
AGENT_TEMPERATURE=0.7

# Budget Limits (Safety)
MONTHLY_BUDGET_LIMIT=200
DAILY_BUDGET_LIMIT=7
HOURLY_BUDGET_LIMIT=0.5


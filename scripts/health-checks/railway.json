{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
      "builder": "NIXPACKS",
      "buildCommand": "cd noid-dashboard && npx next build",
      "installCommand": "cd noid-dashboard && npm install && npm install next --save-dev",
      "nixpacksConfig": {
        "environmentVariables": {
          "NODE_VERSION": "20"
        }
      }
    },
    "deploy": {
      "startCommand": "cd noid-dashboard && npx next start",
      "healthcheckPath": "/",
      "restartPolicyType": "ALWAYS"
    }
  }
  
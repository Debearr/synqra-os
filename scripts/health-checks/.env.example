# ============================================================
# NÃ˜ID LABS ENVIRONMENT VARIABLES
# ============================================================
# Copy this file to .env.local and fill in your actual values
# NEVER commit .env.local to git!

# ============================================================
# SUPABASE (Database)
# ============================================================
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE=your-service-role-key-here

# ============================================================
# ANTHROPIC (Claude AI)
# ============================================================
ANTHROPIC_API_KEY=sk-ant-your-key-here

# ============================================================
# OPENAI (GPT-4)
# ============================================================
OPENAI_API_KEY=sk-your-key-here

# ============================================================
# DEEPSEEK (Local Model API - Optional)
# ============================================================
DEEPSEEK_API_KEY=your-deepseek-key-here

# ============================================================
# TELEGRAM (Alerts & Notifications)
# ============================================================
TELEGRAM_BOT_TOKEN=your-bot-token-here
TELEGRAM_CHAT_ID=your-chat-id-here

# ============================================================
# HUGGING FACE (For Model Downloads - Optional)
# ============================================================
HUGGINGFACE_TOKEN=your-hf-token-here

# ============================================================
# REDIS (Optional - For Caching Layer 2)
# ============================================================
REDIS_URL=redis://localhost:6379

# ============================================================
# APPLICATION
# ============================================================
NODE_ENV=development
PORT=3004

# ============================================================
# AI ROUTER CONFIGURATION
# ============================================================
# Enable/disable features
AI_ENABLE_LOCAL_MODELS=true
AI_ENABLE_EXTERNAL_APIS=true
AI_ENABLE_CACHING=true
AI_ENABLE_BRAND_ALIGNMENT=true
AI_ENABLE_SAFETY_CHECKS=true

# Cost limits (USD)
AI_DAILY_BUDGET=100
AI_MONTHLY_BUDGET=3000

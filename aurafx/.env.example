# ============================================================
# PROJECT IDENTITY
# ============================================================
PROJECT_NAME=aurafx
PROJECT_ID=proj_P3jYUneeAXuSGniVCADn0XS
OPENAI_PROJECT_ID=proj_P3jYUneeAXuSGniVCADn0XS

# ============================================================
# DATA CONTROLS (AuraFX Configuration)
# ============================================================
# ‚ùå Free evals DISABLED for AuraFX (fully private)
# ‚úÖ Prompts/outputs kept internal
# ‚ùå No global sharing
# üîí MAXIMUM PRIVACY MODE
OPENAI_ALLOW_FREE_EVALS=false
OPENAI_DATA_SHARING=false
OPENAI_TRAINING_OPT_OUT=true
OPENAI_ZERO_DATA_RETENTION=true

# ============================================================
# AI SERVICES (Project-Specific Keys)
# ============================================================

# OpenAI (for GPT models - use AuraFX project key)
OPENAI_API_KEY=sk-proj-aurafx-your_key_here

# Anthropic Claude (shared infrastructure)
ANTHROPIC_API_KEY=sk-ant-api03-your_anthropic_key_here
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022

# DeepSeek (cost-optimized routing)
DEEPSEEK_API_KEY=your_deepseek_key_here

# HuggingFace (local models - 80% of traffic)
HUGGINGFACE_API_TOKEN=hf_your_token_here
HUGGINGFACE_CACHE_DIR=/app/.cache/huggingface

# ============================================================
# AI ROUTING CONFIGURATION
# ============================================================
# 80% Local (HuggingFace stack - fully private)
# 20% External (DeepSeek, Claude, GPT-5 - zero retention mode)
AI_ROUTING_MODE=hybrid
AI_LOCAL_PERCENTAGE=80
AI_EXTERNAL_PERCENTAGE=20
AI_PRIVACY_MODE=maximum

# Local Model Endpoints (prefer local for privacy)
LOCAL_MODEL_URL=http://localhost:8000
LOCAL_EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
LOCAL_CLIP_MODEL=openai/clip-vit-base-patch32

# External API Privacy Settings
EXTERNAL_API_ZERO_RETENTION=true
EXTERNAL_API_ANONYMIZE=true

# ============================================================
# COST TRACKING & BUDGETS
# ============================================================
ENABLE_COST_TRACKING=true
COST_TRACKING_DB=supabase

# Budget Limits (AuraFX Allocation - Premium tier)
MONTHLY_BUDGET_LIMIT=500
DAILY_BUDGET_LIMIT=17
HOURLY_BUDGET_LIMIT=1.5
PER_REQUEST_MAX_COST=0.10

# Alert Thresholds
BUDGET_ALERT_THRESHOLD=0.80
BUDGET_LOCK_THRESHOLD=0.95

# ============================================================
# SAFETY & GUARDRAILS
# ============================================================
ENABLE_BRAND_CHECK=true
ENABLE_TOXICITY_FILTER=true
ENABLE_SAFETY_GUARDRAILS=true
ENABLE_PRIVACY_AUDIT=true

# Brand Consistency (OpenCLIP)
BRAND_SIMILARITY_THRESHOLD=0.90
BRAND_REFERENCE_IMAGES_PATH=/app/brand/aurafx

# Toxicity Filter
TOXICITY_THRESHOLD=0.6
TOXICITY_MODEL=unitary/toxic-bert

# Privacy Guardrails (AuraFX Specific)
ENABLE_PII_DETECTION=true
ENABLE_DATA_MASKING=true
AUDIT_ALL_REQUESTS=true

# ============================================================
# DATABASE (Supabase - Encrypted)
# ============================================================
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_KEY=your_supabase_service_role_key_here

# Database Encryption
DATABASE_ENCRYPTION_KEY=your_encryption_key_here
ENABLE_DATABASE_ENCRYPTION=true

NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# ============================================================
# AGENT CONFIGURATION
# ============================================================
AGENT_MODE=live
AGENT_MAX_TOKENS=1024
AGENT_TEMPERATURE=0.7
AGENT_PRIVACY_MODE=strict

# RAG Configuration
RAG_ENABLED=true
RAG_MAX_DOCUMENTS=5
RAG_MIN_SIMILARITY=0.75
RAG_ENCRYPTION=true

# Conversation Memory (Encrypted)
CONVERSATION_HISTORY_LIMIT=20
ENABLE_MEMORY_COMPRESSION=true
ENABLE_MEMORY_ENCRYPTION=true

# ============================================================
# COMMUNICATION & ALERTS
# ============================================================

# Telegram Notifications (Encrypted Channel)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHANNEL_ID=your_telegram_channel_id_here
ENABLE_TELEGRAM_ALERTS=true
TELEGRAM_ENCRYPTION=true

# Email (SMTP - Encrypted)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=aurafx@noidlux.com
SMTP_PASS=your_smtp_password_here
FROM_EMAIL=noreply@aurafx.com
EMAIL_ENCRYPTION=true

# ============================================================
# DEPLOYMENT & INFRASTRUCTURE
# ============================================================

# Railway (Secure Environment)
RAILWAY_PROJECT_ID=your_railway_project_id_here
RAILWAY_SERVICE_ID=your_railway_service_id_aurafx
RAILWAY_ENVIRONMENT=production

# Port Configuration
PORT=3006

# Health Checks
HEALTH_CHECK_INTERVAL=300000
ENABLE_AUTO_RECOVERY=true
ENABLE_HEALTH_MONITORING=true

# ============================================================
# DEVELOPMENT
# ============================================================
NODE_ENV=development
DEBUG=false
DEBUG_AI_ROUTING=false
DEBUG_PRIVACY_MODE=true

NEXT_PUBLIC_APP_URL=http://localhost:3006
NEXT_PUBLIC_API_URL=http://localhost:3006/api
NEXT_TELEMETRY_DISABLED=1


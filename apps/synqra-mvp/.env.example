# ============================================================
# Synqra OS - Environment Configuration
# ============================================================

# ------------------------------------------------------------
# ANTHROPIC CLAUDE API
# ------------------------------------------------------------
# Get your API key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-api03-...

# Claude model to use (default: claude-3-5-sonnet-20241022)
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022

# ------------------------------------------------------------
# AGENT CONFIGURATION
# ------------------------------------------------------------
# Set to "mock" for development without API calls
# Set to "live" for production with real Claude API
AGENT_MODE=mock

# Maximum tokens per agent response
AGENT_MAX_TOKENS=4096

# Temperature for agent responses (0.0 - 1.0)
AGENT_TEMPERATURE=0.7

# ------------------------------------------------------------
# VOICE CONFIGURATION (Optional - Future)
# ------------------------------------------------------------
# Speech-to-Text provider (future: deepgram, assemblyai, whisper)
STT_PROVIDER=mock

# Text-to-Speech provider (future: elevenlabs, playht, openai)
TTS_PROVIDER=mock

# Voice API keys (when needed)
# DEEPGRAM_API_KEY=
# ELEVENLABS_API_KEY=
# PLAYHT_API_KEY=

# ------------------------------------------------------------
# RAG CONFIGURATION
# ------------------------------------------------------------
# Enable RAG retrieval for agent context
RAG_ENABLED=true

# Maximum documents to retrieve
RAG_MAX_DOCUMENTS=5

# Minimum similarity threshold (0.0 - 1.0)
RAG_MIN_SIMILARITY=0.7

# ------------------------------------------------------------
# MEMORY & STORAGE
# ------------------------------------------------------------
# Use existing Supabase instance from root .env
# SUPABASE_URL is inherited from root
# SUPABASE_ANON_KEY is inherited from root

# Conversation history limit (number of messages)
CONVERSATION_HISTORY_LIMIT=20

# ------------------------------------------------------------
# SAFETY & GUARDRAILS
# ------------------------------------------------------------
# Enable hallucination detection
HALLUCINATION_CHECK=true

# Enable dual-pass validation
DUAL_PASS_VALIDATION=true

# Confidence threshold for responses (0.0 - 1.0)
MIN_CONFIDENCE_THRESHOLD=0.6

# ------------------------------------------------------------
# DEVELOPMENT
# ------------------------------------------------------------
# Enable debug logging
DEBUG_AGENTS=false

# Mock mode delay (ms) - simulates API latency
MOCK_DELAY_MS=1500

# ============================================================
# SYNQRA AI ROUTING SYSTEM - ENVIRONMENT VARIABLES
# ============================================================

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE=your-service-role-key

# AI Provider Keys
GROQ_API_KEY=gsk_your_groq_key
DEEPSEEK_API_KEY=your_deepseek_key
ANTHROPIC_API_KEY=sk-ant-your-key
GOOGLE_AI_API_KEY=your_google_ai_key

# Routing Configuration
ROUTING_MODE=adaptive
# Options: adaptive | strict
# - adaptive: Uses quality scores to skip stages dynamically
# - strict: Always runs full pipeline

MAX_COST_PER_ITEM=0.02
# Alert threshold for cost per content item (USD)

ENABLE_COST_LOGGING=true
# Toggle cost tracking to Supabase

# Rate Limiting
MAX_REQUESTS_PER_MINUTE=60
GROQ_DAILY_TOKEN_LIMIT=7200000
# Groq free tier: ~7.2M tokens/day

# Quality Thresholds (0-100 scale)
GROQ_QUALITY_THRESHOLD=85
# Skip Gemini if Groq output scores above this
GEMINI_QUALITY_THRESHOLD=92
# Skip Claude if Gemini output scores above this

# Timeouts (milliseconds)
AI_REQUEST_TIMEOUT=30000
PIPELINE_TIMEOUT=120000

# Feature Flags
ENABLE_ADAPTIVE_ROUTING=true
ENABLE_CACHING=true
CACHE_TTL_SECONDS=86400
# 24 hours for strategy caching

# Monitoring & Alerts
ALERT_ON_HIGH_COST=true
ALERT_ON_HIGH_FAILURE_RATE=true
FAILURE_RATE_THRESHOLD=0.1
# Alert if >10% of requests fail

# Railway (Production)
PORT=3004
NODE_ENV=production

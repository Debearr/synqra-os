# Synqra automation worker + internal jobs

# Core app/service connectivity
INTERNAL_API_BASE_URL=http://localhost:3000
AUTOMATION_WORKER_BASE_URL=http://localhost:8080
GCP_PROJECT_ID=your-gcp-project-id
GCP_REGION=us-central1

# Supabase server access
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# Internal request signing
INTERNAL_JOB_SIGNING_SECRET=replace-with-strong-random-secret

# Optional Google integrations
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:3000/api/google/oauth/callback
GOOGLE_ENCRYPTION_KEY=replace-with-32-byte-key-or-base64

# Firebase telemetry (observe-only sink)
FIREBASE_TELEMETRY_ENABLED=false
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_CLIENT_EMAIL=your-service-account@your-project.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY=-----BEGIN PRIVATE KEY-----\nREPLACE_ME\n-----END PRIVATE KEY-----\n
FIREBASE_TELEMETRY_COLLECTION=synqra_events

# Worker runtime
JOB_MAX_ATTEMPTS=5
JOB_BASE_BACKOFF_SECONDS=10
JOB_MAX_BACKOFF_SECONDS=900
JOB_DEFAULT_USER_ID=00000000-0000-0000-0000-000000000000

# Platform-safe defaults
SCHEDULING_ENABLED=false
AUTO_PUBLISH_ENABLED=false
PLATFORM_CONNECTORS_ENABLED=false
SENSITIVE_ACTION_APPROVAL_REQUIRED=true


{
  "name": "noid-labs-ecosystem",
  "version": "1.0.0",
  "description": "NØID Labs unified ecosystem: Synqra × NØID × AuraFX",
  "private": true,
  "packageManager": "pnpm@9.15.0",
  "workspaces": [
    "apps/*",
    "shared"
  ],
  "scripts": {
    "build": "pnpm build:all",
    "start": "cd apps/synqra-os-intake && node dist/index.js",
    "noid:verify": "bash scripts/verify-codebase.sh",
    "noid:preflight": "bash scripts/pre-flight-check.sh",
    "noid:deploy": "bash scripts/deploy-all.sh",
    "noid:test": "bash scripts/smoke-test.sh",
    "noid:status": "node -e \"import('./shared/dev/tools.ts').then(m => m.runDiagnostics('synqra'))\"",
    "noid:optimize": "node -e \"import('./shared/optimization/auto-optimizer.ts').then(m => m.autoOptimizer.optimize())\"",
    "agents:evolve": "node -e \"import('./shared/autonomous/evolving-agents.ts').then(m => m.agentFleet.evolveAllAgents())\"",
    "dev:synqra": "pnpm --filter synqra-mvp dev",
    "dev:noid": "pnpm --filter noid-dashboard dev",
    "build:all": "pnpm --filter=synqra-os-intake build",
    "lint:all": "npm run lint --workspaces",
    "clean": "find . -name 'node_modules' -type d -prune -exec rm -rf '{}' + && find . -name 'dist' -type d -prune -exec rm -rf '{}' +"
  },
  "keywords": [
    "noid-labs",
    "synqra",
    "ai",
    "automation",
    "monorepo"
  ],
  "author": "NØID Labs",
  "license": "PROPRIETARY",
  "devDependencies": {
    "@types/node": "^22.9.0",
    "typescript": "^5.6.3"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=9.0.0",
    "pnpm": ">=8.0.0"
  }
}

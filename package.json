{
  "name": "chaos-carousel",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "next dev -p 3000",
    "build": "next build",
    "start": "next start -p 3000",
    "export:slides": "node scripts/exportSlides.js",
    "clean": "rm -rf .next node_modules/.cache",
    "clean:full": "rm -rf .next node_modules/.cache node_modules package-lock.json && npm install",
    "restart": "npm run clean && npm run dev",
    "restart:clean": "pkill -f 'next dev' || true && npm run clean && npm run dev"
  },
  "dependencies": {
    "file-saver": "^2.0.5",
    "html2canvas": "^1.4.1",
    "jszip": "^3.10.1",
    "next": "^14.2.7",
    "puppeteer": "^23.7.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.14",
    "@types/node": "^24.9.1",
    "@types/react": "^19.2.2",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.38.0",
    "eslint-config-next": "^16.0.1",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.14",
    "typescript": "^5.9.3"
  }
}

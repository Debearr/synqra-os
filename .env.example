# ============================================================
# NÃ˜ID LABS ENVIRONMENT VARIABLES
# ============================================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to git (it's in .gitignore)

# ============================================================
# CORE SERVICES (Required)
# ============================================================

# Anthropic AI (Claude)
ANTHROPIC_API_KEY=sk-ant-api03-...
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022

# Supabase Database
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...
SUPABASE_SERVICE_ROLE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# Or direct PostgreSQL connection
DATABASE_URL=postgresql://user:password@host:port/database

# ============================================================
# N8N WORKFLOWS (Optional but recommended)
# ============================================================

N8N_WEBHOOK_URL=https://your-n8n.railway.app
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=your_secure_password

# ============================================================
# NOTIFICATIONS (Optional)
# ============================================================

SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR/WEBHOOK

# ============================================================
# AGENT CONFIGURATION (Optional - uses defaults if not set)
# ============================================================

AGENT_MODE=live
# Options: mock | live
# mock = no API calls, returns simulated responses (free, for testing)
# live = real API calls to Anthropic (costs money, for production)

AGENT_MAX_TOKENS=4096
AGENT_TEMPERATURE=0.7

# ============================================================
# SYSTEM CONFIGURATION (Optional)
# ============================================================

NODE_ENV=production
# Options: development | staging | production

LOG_LEVEL=info
# Options: debug | info | warn | error

# ============================================================
# MARKET INTELLIGENCE (Optional)
# ============================================================

# Twitter/X (Optional - for advanced scraping)
TWITTER_BEARER_TOKEN=

# LinkedIn (Optional - for Sales Navigator API)
LINKEDIN_ACCESS_TOKEN=

# ============================================================
# RAILWAY DEPLOYMENT (Set in Railway dashboard)
# ============================================================

PORT=3004
# Railway auto-sets this, but you can override

RAILWAY_ENVIRONMENT=production
# Auto-set by Railway

# ============================================================
# FEATURE FLAGS (Optional)
# ============================================================

ENABLE_SELF_HEALING=true
ENABLE_MARKET_INTELLIGENCE=true
ENABLE_AUTO_OPTIMIZATION=true
ENABLE_AGENT_LEARNING=true

# ============================================================
# RATE LIMITING (Optional)
# ============================================================

RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=60000
# 100 requests per minute (adjust based on needs)

# ============================================================
# CACHE CONFIGURATION (Optional)
# ============================================================

CACHE_DEFAULT_TTL=3600
# Default cache TTL in seconds (1 hour)

CACHE_MAX_SIZE=1000
# Max number of cache entries

# ============================================================
# MONITORING (Optional)
# ============================================================

SENTRY_DSN=
# For error tracking

ANALYTICS_TRACKING_ID=
# For analytics

# ============================================================
# SMTP (Optional - for email notifications)
# ============================================================

SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@noidlabs.com
